<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- For backups stored in app's external files directory -->
    <external-files-path name="backups" path="backups" />

    <!-- For camera photos stored in app's external files directory -->
    <external-files-path name="student_photos" path="." />

    <!-- For temporary files that might be shared -->
    <cache-path name="cache" path="." />

    <!-- For drawings stored in internal storage -->
    <files-path name="drawings" path="." />

    <!-- For images captured in the app -->
    <external-path name="my_images" path="Pictures" />

    <!-- For JSON files in documents directory -->
    <external-files-path name="documents" path="Documents" />
</paths>